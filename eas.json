{
  "cli": {
    "version": ">= 5.9.1",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "node": "bun",
      "bun": {
        "installCommand": "bun install"
      }
    },
    "ios-simulator": {
      "extends": "development",
      "ios": {
        "simulator": true
      },
      "node": "bun",
      "bun": {
        "installCommand": "bun install"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "node": "bun",
      "bun": {
        "installCommand": "bun install"
      }
    },
    "production": {
      "node": "bun",
      "bun": {
        "installCommand": "bun install"
      }
    },
    "build-and-maestro-test": {
      "distribution": "internal",
      "withoutCredentials": true,
      "config": "build-and-maestro-test.yml",
      "android": {
        "buildType": "apk",
        "image": "latest"
      },
      "node": "bun",
      "bun": {
        "installCommand": "bun install"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
